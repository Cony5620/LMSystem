@model IEnumerable<CategoryViewModel> 
<h3>Category List</h3>

@{
    var info = TempData["Info"];
}
@if (info != null)
{
    if (Convert.ToBoolean(TempData["status"]))
    {
        <div class="alert alert-success" role="alert">
            @info
        </div>
    }
    else
    {
        <div class="alert alert-danger" role="alert">
            @info
        </div>
    }
}
 

   


<table class="table table-bordered table-striped" id="CategoryTable">
    <thead>
        @{int i=1;}
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        { @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@i</th>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>
                        <a href="/category/edit?id=@item.id" class="btn btn-primary">Edit</a>
                        <a href="/category/delete?id=@item.id" class="btn btn-danger"onclick="return confirm('Are u sure to delete');">Delete</a>
                    </td>

                </tr>
                i++;
            }

        }
        else
        {
            <div class="alert alert-success" role="alert">
             There is no Data!!
            </div>
        }

       
       
    </tbody>
</table>
<a href="/Category/Entry" class="btn btn-outline-primary">Entry</a>
<script type="text/javascript">
    $(document).ready(function () {
        $("#DepartmentTable").DataTable({
            "responsive": true,
            "lengthChange": false,
            "autoWidth": false,
            "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
        }).buttons().container().appendTo('#DepartmentTable_wrapper .col-md-6:eq(0)');
    });
</script>

