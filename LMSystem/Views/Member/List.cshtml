@model IEnumerable<MemberViewModel>
<h3>Member List</h3>

@{
    var info = TempData["Info"];
}
@if (info != null)
{
    if (Convert.ToBoolean(TempData["status"]))
    {
        <div class="alert alert-success" role="alert">
            @info
        </div>
    }
    else
    {
        <div class="alert alert-danger" role="alert">
            @info
        </div>
    }
}




<table class="table">
    <thead>
        @{
            int i = 1;
        }
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th> 
            <th scope="col">Email</th>
            <th scope="col">Adress</th>
            <th scope="col">Membershipdate<th>
            <th scope="col">Membershiptype</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        { @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@i</th>
                    <td>@item.Name</td>  
                    <td>@item.Email</td>
                    <td>@item.Adress</td>
                    <td>@item.MembershipDate.ToString("yyyy-MM-dd")</td>
                    <td>@item.MembershipType</td>
                    <td>@item.Adress</td>
                    <td>
                        <a href="/member/edit?id=@item.id" class="btn btn-primary">Edit</a>
                        <a href="/member/delete?id=@item.id" class="btn btn-danger" onclick="return confirm('Are u sure to delete');">Delete</a>
                    </td>

                </tr>
                i++;
            }

        }
        else
        {
            <div class="alert alert-success" role="alert">
                There is no Data!!
            </div>
        }



    </tbody>
</table>
<a href="/member/Entry" class="btn btn-outline-primary">Entry</a>
