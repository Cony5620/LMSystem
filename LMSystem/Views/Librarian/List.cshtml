@model IList<LibrarianViewModel>
<h3>Librarian List</h3>

@if (TempData["info"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["info"]
    </div>
}


<table class="table">
    <thead>
        @{
            int i = 1;
        }
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        { @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@i</th>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>
                        <a href="/librarian/edit?id=@item.id" class="btn btn-primary">Edit</a>
                        <a href="/librarian/delete?id=@item.id" class="btn btn-danger" onclick="return confirm('Are u sure to delete');">Delete</a>
                    </td>

                </tr>
                i++;
            }

        }
        else
        {
            <div class="alert alert-success" role="alert">
                There is no Data!!
            </div>
        }



    </tbody>
</table>
<a href="/librarian/Entry" class="btn btn-outline-primary">Entry</a>
